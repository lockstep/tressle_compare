<div class="row">
  <div class="col">
    <%= form_for products_path, method: :get do %>
      <div class="form-group input-group">
        <span class="input-group-addon"><%= fa_icon 'search' %></span>
        <%= text_field_tag 'query', nil, placeholder: 'Search...', autofocus: true, class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <%= render 'filters' %>
  </div>
  <div class="col">
    <div class="dropdown float-right mb-2">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="sort-product" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Sort by
      </button>
      <div class="dropdown-menu" aria-labelledby="sort-product">
        <a class="dropdown-item" href="#"><%= fa_icon('sort-alpha-asc') %> A-Z</a>
        <a class="dropdown-item" href="#"><%= fa_icon('sort-alpha-desc') %> Z-A</a>
        <a class="dropdown-item" href="#"><%= fa_icon('sort-numeric-asc') %> Price</a>
        <a class="dropdown-item" href="#"><%= fa_icon('sort-numeric-desc') %> Price</a>
      </div>
    </div>
    <div class="clearfix"></div>
    <%= render 'list' %>
  </div>
</div>