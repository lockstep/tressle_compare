<% flash.keys.each do |type| %>
  <div class="alert alert-<%= alert_class(type) %> alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= flash[type] %>
  </div>
<% end %>
